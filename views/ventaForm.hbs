                </select>
            </div>
            </select>
            <h2 class="nameCilindraje">Cilindraje</h2>
            <select class="optionCilindraje" name="subjectCilindraje">
                <option desabled="disabled" selected="selected">Cilindraje</option>
                <option>5.000</option>
                <option>3.500</option>
                <option>3.000</option>
                <option>2.500</option>
                <option>2.000</option>
            </select>
            <h2 class="nameRightSide">Color</h2>
            <select class="optionColor" name="subjectColor">
                <option desabled="disabled" selected="selected">Color</option>
                <option>Blanco</option>
                <option>Negro</option>
                <option>Rojo</option>
                <option>Azul</option>
                <option>Celeste</option>
            </select>
            <h2 class="namePassangers">Cantidad de Pasajeros</h2>
            <select class="optionPassagers" name="subjectPasajeros">
                <option desabled="disabled" selected="selected"></option>
                <option>2</option>
                <option>4</option>
                <option>5</option>
                <option>7</option>
            </select>
            <h2 class="nameConditions">Condicion del Vehiculo</h2>
            <select class="optionConditions" name="subjectConditions">
                <option desabled="disabled" selected="selected"></option>
                <option>Usuado</option>
                <option>Nuevo</option>
            </select>
            <h2 class="nameKilometraje">Kilometraje</h2>
            <input class="codeKilometraje" type="text" name="area_code" maxlength="3"><br>
            <textarea name="extras" class="extras" rows="10" cols="40"
                placeholder="Escriba la información extra"></textarea>
            <div class="content">
                <div class="box">
                    <input type="file" name="extras" id="file-1" class="inputfile inputfile-1"
                        data-multiple-caption="{count} files selected" multiple />
                </div>
            </div>
            <button type="submit">Enviar</button>
        </form>
