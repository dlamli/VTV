<!DOCTYPE html>
<html lang="en">
{{> head}}

<body class="body">

    <header id="header" class="fixed-top header-transparent">
        <div class="container d-flex align-items-center">
            <h1 class="logo mr-auto"><a href="/">VTV</a></h1>
            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="active"><a href="/">Inicio</a></li>
                    <li><a href="/login">Login</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <section id="login" class="d-flex align-items-center justify-content-center">
        <div class="container position-relative">

            {{#if mensaje}}
            <div class="alert alert-{{mensaje.tipo}} alert-dismissible fade show" role="alert">
                <strong>{{mensaje.titulo}}</strong> {{mensaje.error}}.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/if}}

            <h1>Login <b style="color: #FFC107;">VTV</b></h1>
            <div class="contenedor-form">
                <div class="toggle">
                    <span> Crear Cuenta</span>
                </div>
                <div class="formulario">
                    <h2>Iniciar Sesión</h2>
                    <br>
                    <form id="formLogin" method="POST" action="/login">
                        <input id="txtUsuario" class="usuario" type="text" placeholder="Ingrese el usuario"
                            name="usuario" maxlength="50" required>
                        <input id="txtContraseña" type="password" placeholder="Ingrese la contraseña" name="pass"
                            min="8" maxlength="20" required>
                        <input id="btnLogin" type="submit" value="Log In"></input>
                        <br>
                    </form>
                </div>

                <div class="formulario">
                    <h2>Registro de usuario</h2>
                    <form id="formRegistro" method="POST" action="/registrar">
                        <input type="text" class="nombre" placeholder="Ingrese el nombre" name="nombreUsuario"
                            maxlength="50" required>
                        <input type="text" placeholder="Ingrese el apellido paterno" name="apellidoP" maxlength="50"
                            required>
                        <input type="text" placeholder="Ingrese el apellido materno" name="apellidoM" maxlength="50"
                            required>
                        <input type="text" placeholder="Ingrese el teléfono" name="tel" maxlength="8" required>
                        <input type="text" placeholder="Ingrese la cédula" name="cedula" maxlength="9" required>
                        <input type="password" placeholder="Ingrese la contraseña" name="clave" maxlength="20" required>
                        <input type="email" placeholder="Ingrese la correo electrónico" name="email" maxlength="50"
                            required>
                        <select id="country" class="country" name="country">
                            <option hidden>Seleccione una nacionalidad</option>
                        </select>
                        <input class="btnRegistrar" type="submit" value="Crear cuenta">
                    </form>
                </div>
                {{!-- <div class="reset-password">
                    <a href="#">Olvide mi Contraseña?</a>
                </div> --}}
            </div>
    </section>

    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="assets/vendor/waypoints/jquery.waypoints.min.js"></script>
    <script src="assets/vendor/counterup/counterup.min.js"></script>
    <script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/venobox/venobox.min.js"></script>
    <script src="assets/js/jquery-3.1.1.min.js"></script>
    <script src="assets/js/main_login.js"></script>
    <script src="assets/js/components/validaciones.js"> </script>
    <script src="assets/js/http-provider/provider.js"> </script>

</body>

</html>