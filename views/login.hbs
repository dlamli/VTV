<!DOCTYPE html>
<html lang="en">
{{> head}}
<body class="body">
    {{> header}}
    
    <section id="login" class="d-flex align-items-center justify-content-center">
        <div class="container position-relative">
            <h1>Login <b style="color: #FFC107;">VTV</b></h1>
        <div class="contenedor-form">
        <div class="toggle">
            <span> Crear Cuenta</span>
        </div>

        <div class="formulario" >
            <h2>Iniciar Sesión</h2>
            <br>
            <form id="formLogin" >
                <input id="txtUsuario" type="text" placeholder="Usuario" name="usuario" required>
                <input id="txtContraseña" type="password" placeholder="Contraseña" name="clave" required>
                {{!-- <input id="btnLogin" type="submit" value="Iniciar Sesión"> --}}
                <a id="btnLogin" class="btn btn-warning" type="submit" >Iniciar Sesión</a>
                <br>
                <p id="msg" class="text-warning"></p>
            </form>


        </div>

        <div class="formulario">
            <h2>Crea tu Cuenta</h2>
            <form action="#">
                <input type="text" placeholder="Usuario" required>

                <input type="password" placeholder="Contraseña" required>

                <input type="email" placeholder="Correo Electronico" required>

                <input type="text" placeholder="Teléfono" required>

                <input type="submit" value="Registrarse">
            </form>
        </div>
        <div class="reset-password">
            <a href="#">Olvide mi Contraseña?</a>
        </div>
    </div>
    </section>
    
    
